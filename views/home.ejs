<!-- Hero Section -->
<section class="hero position-relative d-flex align-items-center justify-content-center text-center text-white"
  style="height: calc(100vh - 70px);">
  <!-- Dark Overlay -->
  <div class="hero-overlay position-absolute top-0 start-0 w-100 h-100"
    style="background: rgba(0,0,0,0.5); z-index: 1;"></div>

  <!-- Background Image -->
  <img src="/images/hero-bg.jpg" class="position-absolute top-0 start-0 w-100 h-100 object-fit-cover"
    alt="Travel Background" style="z-index:0;">

  <!-- Hero Content -->
  <div class="container position-relative z-2">
    <h1 class="display-4 fw-bold">Your Journey Begins with EverJourney</h1>
    <p class="lead">Hotels, Travels & Exclusive Packages — All in One Place</p>

    <!-- Booking Search Tabs -->
    <div class="search-box bg-white shadow rounded-3 p-3 p-md-4">
      <ul class="nav nav-pills mb-3 justify-content-center" id="bookingTabs" role="tablist">
        <li class="nav-item"><button class="nav-link active" id="bus-tab" data-bs-toggle="pill"
            data-bs-target="#bus">Bus</button></li>
        <li class="nav-item"><button class="nav-link" id="stays-tab" data-bs-toggle="pill"
            data-bs-target="#stays">Hotels</button></li>
        <li class="nav-item"><button class="nav-link" id="cabs-tab" data-bs-toggle="pill"
            data-bs-target="#cabs">Cabs</button></li>
        <li class="nav-item"><button class="nav-link" id="packages-tab" data-bs-toggle="pill"
            data-bs-target="#packages">Packages</button></li>
      </ul>

      <div class="tab-content">
        <!-- Bus Booking -->
        <div class="tab-pane fade show active" id="bus">
          <form action="/buses" method="GET" class="row g-2">
            <div class="col-md-3"><input type="text" name="from" class="form-control" placeholder="From"></div>
            <div class="col-md-3"><input type="text" name="to" class="form-control" placeholder="To"></div>
            <div class="col-md-3"><input type="date" name="date" class="form-control"></div>
            <div class="col-md-3"><button class="btn btn-danger w-100">Search Buses</button></div>
          </form>
        </div>

        <!-- Hotels -->
        <div class="tab-pane fade" id="stays">
          <form action="/hotels" method="GET" class="row g-2">
            <div class="col-md-4"><input type="text" name="q" class="form-control" placeholder="Enter city / hotel">
            </div>
            <div class="col-md-2"><input type="date" name="checkin" class="form-control"></div>
            <div class="col-md-2"><input type="date" name="checkout" class="form-control"></div>
            <div class="col-md-2"><select name="guests" class="form-select">
                <option>1 Guest</option>
                <option selected>2 Guests</option>
                <option>3 Guests</option>
              </select></div>
            <div class="col-md-2"><button class="btn btn-danger w-100">Search</button></div>
          </form>
        </div>

        <!-- Cabs -->
        <div class="tab-pane fade" id="cabs">
          <form action="/cabs" method="GET" class="row g-2">
            <div class="col-md-4"><input type="text" name="pickup" class="form-control" placeholder="Pickup Location">
            </div>
            <div class="col-md-4"><input type="text" name="drop" class="form-control" placeholder="Drop Location"></div>
            <div class="col-md-2"><input type="date" name="date" class="form-control"></div>
            <div class="col-md-2"><button class="btn btn-danger w-100">Search</button></div>
          </form>
        </div>

        <!-- Packages -->
        <div class="tab-pane fade" id="packages">
          <form action="/packages" method="GET" class="row g-2">
            <div class="col-md-6"><input type="text" name="destination" class="form-control" placeholder="Destination">
            </div>
            <div class="col-md-4"><input type="date" name="date" class="form-control"></div>
            <div class="col-md-2"><button class="btn btn-danger w-100">Search</button></div>
          </form>
        </div>
      </div>
    </div>
</section>



