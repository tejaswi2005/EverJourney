<%- include('../layouts/boilerplate') %>

<div class="container py-5">
  <h3 class="mb-4">ðŸ“– Manage Bookings</h3>

  <% if (bookings && bookings.length > 0) { %>
    <table class="table table-striped shadow-sm rounded-4">
      <thead>
        <tr>
          <th>Booking ID</th>
          <th>User</th>
          <th>Hotel/Package</th>
          <th>Date</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(b => { %>
          <tr>
            <td><%= b.id %></td>
            <td><%= b.user %></td>
            <td><%= b.item %></td>
            <td><%= b.date %></td>
            <td><span class="badge bg-info"><%= b.status %></span></td>
            <td>
              <form action="/admin/update-booking/<%= b.id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-success">Confirm</button>
              </form>
              <form action="/admin/cancel-booking/<%= b.id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-muted">No bookings available.</p>
  <% } %>
</div>
