<%- include('../layouts/boilerplate') %>

<div class="container py-5">
  <h3 class="mb-4">ðŸ‘¥ Manage Users</h3>

  <% if (users && users.length > 0) { %>
    <table class="table table-hover shadow-sm rounded-4">
      <thead>
        <tr>
          <th>User ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(u => { %>
          <tr>
            <td><%= u._id %></td>
            <td><%= u.name %></td>
            <td><%= u.email %></td>
            <td><span class="badge <%= u.role === 'admin' ? 'bg-danger' : 'bg-primary' %>">
              <%= u.role %></span>
            </td>
            <td>
              <form action="/admin/delete-user/<%= u._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-muted">No users found.</p>
  <% } %>
</div>
