<%- include('../layouts/boilerplate') %>

<div class="container py-5">
  <h3 class="mb-4">üè® Add New Hotel</h3>
  <form action="/admin/create-hotel" method="POST" class="card shadow-sm p-4 rounded-4">
    
    <div class="mb-3">
      <label class="form-label">Hotel Name</label>
      <input type="text" class="form-control" name="name" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Location</label>
      <input type="text" class="form-control" name="location" placeholder="City, State, Country" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Address</label>
      <textarea class="form-control" name="address" rows="2" required></textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Hotel Type</label>
      <select name="type" class="form-select">
        <option>Luxury</option>
        <option>Budget</option>
        <option>Resort</option>
        <option>Boutique</option>
        <option>Homestay</option>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Star Rating</label>
      <input type="number" name="rating" class="form-control" min="1" max="5" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Contact Email</label>
      <input type="email" name="email" class="form-control">
    </div>

    <div class="mb-3">
      <label class="form-label">Contact Phone</label>
      <input type="text" name="phone" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">‚úÖ Save Hotel</button>
  </form>
</div>
