
<div class="container my-5">
  <h2 class="mb-4 fw-bold text-center">Available Hotels</h2>
  <div class="row g-4">
    <% hotels.forEach(hotel => { %>
    <div class="col-md-4 mb-4">
      <div class="card shadow-lg">
        <img src="<%= hotel.image_url %>" class="card-img-top" alt="<%= hotel.name %>">
        <div class="card-body">
          <h5><%= hotel.name %></h5>
          <p><%= hotel.location %> | ‚≠ê <%= hotel.star_rating %></p>
          <a href="/hotels/<%= hotel.id %>" class="btn btn-primary">View Details</a>
        </div>
      </div>
    </div>
  <% }) %>
  </div>
</div>
