
<div class="container my-5">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= hotel.image_url %>" class="img-fluid rounded shadow" alt="<%= hotel.name %>">
    </div>
    <div class="col-md-6">
      <h2><%= hotel.name %></h2>
      <p><%= hotel.location %></p>
      <p class="text-warning">⭐ <%= hotel.star_rating %></p>
      <p><strong>Contact:</strong> <%= hotel.contact_email %> | <%= hotel.contact_phone %></p>
      <p><strong>Policies:</strong> <%= hotel.policies %></p>
    </div>
  </div>

  <hr class="my-5">

  <h3 class="mb-4">Available Rooms</h3>
  <div class="row g-4">
    <% rooms.forEach(room => { %>
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <img src="<%= room.image_url %>" class="card-img-top" alt="<%= room.type %>">
          <div class="card-body">
            <h5 class="card-title"><%= room.type %></h5>
            <p>Price: ₹<%= room.price_per_night %>/night</p>
            <p>Occupancy: <%= room.occupancy %> guests</p>
            <a href="/rooms/<%= room.room_id %>" class="btn btn-outline-primary w-100">View Room</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
