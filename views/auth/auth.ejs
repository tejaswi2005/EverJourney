<section>
  <div class="container py-5">
    <div class="row d-flex justify-content-center align-items-start">

      <!-- Left Image -->
      <div class="col-lg-6 d-none d-lg-block">
        <img src="/images/travel-banner.jpg" alt="Travel Banner" class="img-fluid rounded-4"
          style="height: 100%; object-fit: cover;">
      </div>

      <!-- Auth Section -->
      <div class="col-lg-6">
        <div class="card shadow p-5 rounded-4" style="background-color: #ffffff;">

          <!-- Top Tabs: User / Admin -->
          <ul class="nav nav-pills mb-4 justify-content-center" id="roleTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="user-tab" data-bs-toggle="tab" data-bs-target="#userAuth"
                type="button" role="tab">User</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="admin-tab" data-bs-toggle="tab" data-bs-target="#adminAuth" type="button"
                role="tab">Admin</button>
            </li>
          </ul>

          <div class="tab-content" id="roleTabsContent">

            <!-- USER AUTH -->
            <div class="tab-pane fade show active" id="userAuth" role="tabpanel">
              <ul class="nav nav-tabs mb-4" id="userAuthTabs" role="tablist">
                <li class="nav-item">
                  <button class="nav-link active" id="user-login-tab" data-bs-toggle="tab" data-bs-target="#userLogin"
                    type="button">Login</button>
                </li>
                <li class="nav-item">
                  <button class="nav-link" id="user-signup-tab" data-bs-toggle="tab" data-bs-target="#userSignup"
                    type="button">Sign Up</button>
                </li>
              </ul>

              <div class="tab-content">
                <!-- User Login -->
                <div class="tab-pane fade show active" id="userLogin">
                  <form action="/user/login" method="POST">
                    <div class="form-floating mb-3">
                      <input type="email" class="form-control" name="email" placeholder="Email Address" required>
                      <label>Email Address</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" name="password" placeholder="Password" required>
                      <label>Password</label>
                    </div>
                    <button type="submit" class="btn w-100 text-white fw-bold mb-3"
                      style="background: linear-gradient(90deg, #ff6a00, #ee0979);">Login</button>
                  </form>
                </div>

                <!-- User Signup -->
                <div class="tab-pane fade" id="userSignup">
                  <form action="/user/signup" method="POST">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control" name="name" placeholder="Full Name" required>
                      <label>Full Name</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="email" class="form-control" name="email" placeholder="Email Address" required>
                      <label>Email Address</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="tel" class="form-control" name="phone" placeholder="Phone Number">
                      <label>Phone Number</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" name="password" placeholder="Password" required>
                      <label>Password</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password"
                        required>
                      <label>Confirm Password</label>
                    </div>
                    <div class="form-floating mb-3">
                      <select class="form-select" name="country" required>
                        <option value="">Select your country</option>
                        <option>India</option>
                        <option>USA</option>
                        <option>UK</option>
                        <option>Australia</option>
                        <option>Other</option>
                      </select>
                      <label>Country</label>
                    </div>

                    <div class="form-check mb-4">
                      <input class="form-check-input" type="checkbox" name="newsletter" checked>
                      <label class="form-check-label">Subscribe to our newsletter</label>
                    </div>

                    <button type="submit" class="btn w-100 text-white fw-bold"
                      style="background: linear-gradient(90deg, #ff6a00, #ee0979);">Sign Up</button>
                  </form>
                </div>
              </div>
            </div>

            <!-- ADMIN AUTH -->
            <div class="tab-pane fade" id="adminAuth" role="tabpanel">
              <ul class="nav nav-tabs mb-4" id="adminAuthTabs" role="tablist">
                <li class="nav-item">
                  <button class="nav-link active" id="admin-login-tab" data-bs-toggle="tab" data-bs-target="#adminLogin"
                    type="button">Login</button>
                </li>
                <li class="nav-item">
                  <button class="nav-link" id="admin-signup-tab" data-bs-toggle="tab" data-bs-target="#adminSignup"
                    type="button">Sign Up</button>
                </li>
              </ul>

              <div class="tab-content">
                <!-- Admin Login -->
                <div class="tab-pane fade show active" id="adminLogin">
                  <form action="/admin/login" method="POST">
                    <div class="form-floating mb-3">
                      <input type="email" class="form-control" name="email" placeholder="Admin Email" required>
                      <label>Admin Email</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" name="password" placeholder="Password" required>
                      <label>Password</label>
                    </div>
                    <button type="submit" class="btn w-100 text-white fw-bold"
                      style="background: linear-gradient(90deg, #ff6a00, #ee0979);">Login</button>
                  </form>
                </div>

                <!-- ADMIN SIGNUP -->
                <div class="tab-pane fade" id="adminSignup">
                  <form action="/admin/signup" method="POST">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control" name="name" placeholder="Admin Name" required>
                      <label>Admin Name</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="email" class="form-control" name="email" placeholder="Admin Email" required>
                      <label>Admin Email</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" name="password" placeholder="Password" required>
                      <label>Password</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password"
                        required>
                      <label>Confirm Password</label>
                    </div>
                    <!-- Secret Key Field -->
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control" name="secretKey" placeholder="Admin Secret Key" required>
                      <label>Admin Secret Key</label>
                    </div>

                    <!-- Info Alert -->
                    <div class="alert alert-warning small" role="alert">
                      ðŸ”’ Only authorized personnel with a valid Admin Secret Key can sign up as Admin.
                    </div>

                    <button type="submit" class="btn w-100 text-white fw-bold"
                      style="background: linear-gradient(90deg, #ff6a00, #ee0979);">
                      Sign Up
                    </button>
                  </form>
                </div>

              </div>
            </div>

          </div> <!-- End Role Tabs Content -->
        </div>
      </div>

    </div>
  </div>
</section>